{
  "name": "@macalinao/stricli-kit-monorepo",
  "description": "Toolkit for building file-based CLIs with Stricli",
  "private": true,
  "type": "module",
  "version": "0.1.0",
  "packageManager": "bun@1.3.6",
  "workspaces": {
    "packages": [
      "packages/*",
      "apps/*"
    ],
    "catalog": {
      "@macalinao/biome-config": "^0.1.7",
      "@macalinao/eslint-config": "^7.0.3",
      "@macalinao/tsconfig": "^3.2.5",
      "@stricli/core": "^1.0.0",
      "@types/bun": "^1.2.13",
      "chokidar": "^4.0.0",
      "typescript": "^5.9.2",
      "yaml": "^2.7.0",
      "zod": "^3.24.0"
    }
  },
  "scripts": {
    "build": "turbo run build",
    "build:watch": "tsc --build --watch",
    "clean": "turbo run clean",
    "lint": "ast-grep scan && biome check && turbo run lint",
    "lint:fix": "ast-grep scan --update-all && biome check --write --unsafe && turbo run lint -- --fix",
    "lint:ci": "turbo run lint",
    "format": "biome format --write",
    "test": "turbo run test",
    "test:cov": "turbo run test -- --coverage",
    "ci:version": "changeset version && bun update",
    "ci:publish": "for dir in packages/*; do (cd \"$dir\" && bun publish || true); done && changeset tag",
    "prepare": "husky"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.11",
    "@changesets/cli": "^2.29.8",
    "@macalinao/biome-config": "^0.1.7",
    "@macalinao/eslint-config": "^7.0.3",
    "@macalinao/tsconfig": "^3.2.5",
    "@types/bun": "^1.3.6",
    "eslint": "^9.39.2",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.8.0",
    "turbo": "^2.7.5",
    "typescript": "^5.9.3"
  },
  "engines": {
    "node": ">=22",
    "bun": ">=1.0.0"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,cjs,mjs,cts,mts}": "biome check --write --no-errors-on-unmatched",
    "*.{json,jsonc,css}": "biome check --write --no-errors-on-unmatched",
    "*.{md,mdx,yml,yaml,html}": "prettier --write"
  }
}
